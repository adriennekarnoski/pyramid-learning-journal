{% extends "layout.jinja2" %}

{% block content %}

<article>
<h3 class="entry-title">Create New Entry</h3>
<form method="POST">
    <input type="hidden name="csrf_token value={{request.session.get_csrf_token()}} />
    <label for="title">Title</label>
    <input type="text" name="title" value="{{title}}"required/>
    <div class="container">
        <div class="small_container">
        <label for="date">Date</label>
        <input type="text" name="date" value="{{date}}"required/>
    </div>
    <div class="small_container rightcon">
        <label for="date">Tags <span class="example">(e.g., syntax, testing,)</span></label>
        <input type="text" name="tags" value="{{tags}}"required/>
    </div>
    </div>
    <textarea name="body" rows="15" cols="100" required>{{body}}</textarea>
    <input type="submit" value="Create" class="button right"/>
</form>

{% endblock %}  
